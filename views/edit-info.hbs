<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
     integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<header>
<h1 class="text-center m-4"></h1>
</header>

<div class="container">
<div class="row">
<form action="/admin/edit" method="POST">
<input name="id" hidden value="{{id}}">

<div class="mb-3">
<label for="title" class="form-label">Название</label>
<input id="title" name="title" value="{{title}}" class="form-control">
</div>

<div class="mb-3">
<label for="text" class="form-label">Описание</label>
<textarea id="text" name="text" class="form-control">{{text}} </textarea>
</div>

<div class="mb-3">
<label for="preview"class="form-label">Превью</label>
<img src="{{preview}}" id="preview" name="preview"></img>
<input class="form-control form-control-sm" id="preview" name="preview" type="file">
</div>

<div class="mb-3">
<label for="photo" class="form-label">Фото</label>
<img src="{{photo}}" id="photo" name="photo"></img>
<input class="form-control form-control-sm" id="photo" name="photo" type="file">
</div>

<div class="mb-3">
<button class="btn btn-outline-primary">Сохранить</button>
<button type="reset" class="btn btn-outline-primary">Очистить</button>
</div>
</form>
</div>
</div>
